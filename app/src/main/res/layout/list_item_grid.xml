<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.screen.mirroring.casttotv.tv.cast.screencast.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder" />

        <TextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end"
            android:background="@color/black_transparent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

    </com.screen.mirroring.casttotv.tv.cast.screencast.view.SquareRelativeLayout>
</layout>